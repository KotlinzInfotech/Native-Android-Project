<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ScanDataActivity"
    >
    <include layout="@layout/toolbar" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_50sdp"

    >
    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/border_curv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:paddingHorizontal="@dimen/_5sdp">

            <Spinner
                android:theme="@style/mySpinnerItemStyle"
                android:background="@color/spin_back"
                android:id="@+id/spinqrtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp" />

            <ImageView
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down_resize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginVertical="@dimen/_10sdp"

            android:background="@drawable/border_curv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:paddingHorizontal="@dimen/_5sdp">

            <Spinner
                android:theme="@style/mySpinnerItemStyle"
                android:background="@color/spin_back"
                android:id="@+id/spinbarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:padding="5dp" />

            <ImageView
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down_resize" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btnqr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/btn_scan_qr_code"
            android:layout_marginVertical="@dimen/_5sdp"
            />

        <ImageView
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/btnbarcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/btn_enter_order_detail"/>
    </LinearLayout>
</RelativeLayout>


</LinearLayout>